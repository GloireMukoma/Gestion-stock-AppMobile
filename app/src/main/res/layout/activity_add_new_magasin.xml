<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewMagasin"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/fond_ecran">

    <ImageView
        android:id="@+id/magasinIcon"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="9dp"
        android:src="@drawable/achat_img"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/magasinNameInput_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_border"
        android:height="40dp"
        android:hint="Entrer le nom du magasin"/>

    <Button
        android:id="@+id/saveMagasinBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Enregistrer" />

</LinearLayout>