<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateArticleActivity"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/fond_ecran">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="7dp">

        <TextView
            android:text="Designation du produit :"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/productNameModify"
            android:text="LOREM IPSUM DOLOREST AMETRIC"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Quantité stock :"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/productQteModify"
            android:text="189 stocks"
            android:textStyle="bold"
            android:textSize="22dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#AAA9A9" /> <!-- Couleur de la bordure inférieure -->

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:text="Opérations sur le stock"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/entrerStockBtn"
            android:layout_marginRight="8dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Entrer" />

        <Button
            android:id="@+id/sortieStockBtn"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:textSize="10dp"
            android:text="Sortie" />

        <Button
            android:id="@+id/deleteArticle"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC0D0D"
            android:textSize="10dp"
            android:text="Supprimer" />

    </LinearLayout>

</LinearLayout>